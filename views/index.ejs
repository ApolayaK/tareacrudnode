<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Empleados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav></nav>
  </header>

  <main>
    <section class="container mt-3">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Lista de Empleados</h5>
          <a href="/create" class="btn btn-sm btn-primary">
            <i class="bi bi-person-plus"></i> Registrar
          </a>
        </div>
        <div class="card-body">
          <table class="table table-sm table-bordered table-hover text-center">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Fecha de Ingreso</th>
                <th>Faltas</th>
                <th>Cargo</th>
                <th>Operaciones</th>
              </tr>
            </thead>
            <tbody>
              <% registros.forEach(empleado => { %>
              <tr>
                <td><%= empleado.id %></td>
                <td><%= empleado.nombre %></td>
                <td><%= empleado.direccion %></td>
                <td><%= empleado.telefono %></td>
                <td><%= new Date(empleado.fecha_ingreso).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' }) %></td>
                <td><%= empleado.faltas %></td>
                <td><%= empleado.cargo %></td>
                <td>
                  <a href="/edit/<%= empleado.id %>" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <a href="/delete/<%= empleado.id %>" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </td>
              </tr>                 
              <% }) %>              
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

</body>
</html>
